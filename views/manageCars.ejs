<% include partials/header %>
<html>
<head>
<style>
table {
	width:80%
}
table, th, td {
  border: 1px solid black;
	border-collapse: collapse;
}
th, td {
  padding: 15px;
}
th {
	
  text-align: left;
}
caption {
	padding: 15px;
	font-size:18px;
}

a.edit {
	margin: 10px 20px;
	color: white;
	font-size:15px;
	background-color:#77b55a;
	padding:10px 25px;
	text-decoration:none;
	text-shadow:0px 1px 0px #2f6627;
	border-radius:4px;
}
a.del {
	background-color:#e4685d;
	color: white;
	font-size:14px;
	padding:10px 25px;
	text-decoration:none;
	text-shadow:0px 1px 0px #2f6627;
	border-radius:4px;
}


</style>
</head>
<body>
	<table>
		<caption>Car <%=licensePlateNumber%>'s information</caption>
		<tr>
    	<th>License Plate of Car</th>
			<td><%=licensePlateNumber%></td>
		</tr>
		<tr>
      <th>Description</th>
			<td><%=c.description%></td>
		</tr>
		<tr>
			<th>Number of Wheelchair</th>
			<td><%=c.wheelChairNumber%></td>
		</tr>
		<tr>
			<th>Number of Passeger</th>
			<td><%=c.passegerNumber%></td>
		</tr>
	</table>
<br>
<a class='edit' href='/editCar/<%=licensePlateNumber%>'>Edit</a>
<a class='del' href='/managerCar/<%=licensePlateNumber%>' onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
<br>
<br>
<a class='back' href="javascript: history.go(-1)">Back</a>
</body>
</html>
